{
  "name": "@yangss/init-git-repo",
  "version": "0.0.10",
  "description": "Add some features like lint staged files and conventional commits for git repo",
  "main": "dist/index.js",
  "bin": {
    "init-git-repo": "dist/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsup src/**/*.ts --format esm",
    "lint": "eslint src/* --fix",
    "release": "bumpp --tag --push && pnpm publish",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.(ts|js)": "eslint --fix"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "git",
    "hooks",
    "lint",
    "commit-msg"
  ],
  "author": "Nicholas Yang <yss_2016@outlook.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/yangss3/init-git-repo.git"
  },
  "homepage": "https://github.com/yangss3/init-git-repo#readme",
  "license": "ISC",
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/minimist": "^1.2.2",
    "@types/node": "^17.0.21",
    "@yangss/eslint-config-ts": "^0.2.3",
    "bumpp": "^7.1.1",
    "eslint": "^8.11.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "tsup": "^5.12.1",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "chalk": "^5.0.1",
    "fs-extra": "^10.0.1",
    "minimist": "^1.2.5",
    "ora": "^6.1.0"
  }
}
